div#modalModeToAddCompanyMember(class="modal bottom-sheet modal-chat-plus")
    div(class="modal-content")
        div(class="row")
            div(class="col s12 center")
                div(class="title-screen", data-lang="actions") Actions

        a#btnCloseModalModeToAddCompanyMember(href="#!", class="close-buton-float-right default-modal-close-button waves-effect waves-green btn-flat")
            i(class="fa-solid fa-xmark left")
            //- span(data-lang="text-close") Close


        div(class="row no-margin")
            div(class="col s4")
                a#modeToAddCompanyMemberImportFromContactList(href="#!")
                    div(class="card chat-plus-card")
                        div(class="card-content")
                            i(class="fa-solid fa-address-book", class="chat-plus-item-icon")
                            div(data-lang="import-from-contact-list", class="chat-plus-item-text") Import From Contact List
            div(class="col s4")
                a#modeToAddCompanyMemberEnterAPhoneNumber(href="#!")
                    div(class="card chat-plus-card")
                        div(class="card-content")
                            i(class="fa-solid fa-hashtag", class="chat-plus-item-icon")
                            div(data-lang="enter-a-phone-number", class="chat-plus-item-text") Enter a Phone Number


